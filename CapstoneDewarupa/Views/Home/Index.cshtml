                <div class="flex gap-7">
                    <div class="space-y-2 w-1/2">
                        <label class="text-primary-green text-xl font-bold" for="nama">Nama Anda</label>
                        <input
                            class="py-3 px-[14px] h-11 rounded-xl outline-none focus:outline-none border-[#A2A2A2] focus:ring-transparent w-full"
                            type="text" id="nama" placeholder="Nama Lengkap...">
                    </div>
                    <div class="space-y-2 w-1/2">
                        <label class="text-primary-green text-xl font-bold" for="email">Email Anda</label>
                        <input
                            class="py-3 px-[14px] h-11 rounded-xl outline-none focus:outline-none border-[#A2A2A2] focus:ring-transparent w-full"
                            type="email" id="email" placeholder="Email...">
                    </div>
                </div>
                <div class="space-y-2 mt-2">
                    <label class="text-primary-green text-xl font-bold" for="subject-pesan">Subject Pesan</label>
                    <input
                        class="py-3 px-[14px] h-11 rounded-xl outline-none focus:outline-none border-[#A2A2A2] focus:ring-transparent w-full"
                        type="text" id="subject-pesan" placeholder="Subject pesan...">
                </div>
                <div class="space-y-2 mt-2">
                    <label class="text-primary-green text-xl font-bold" for="pesan">Pesan Anda</label>
                    <textarea
                        class="py-3 px-[14px] h-[86px] rounded-xl outline-none focus:outline-none border-[#A2A2A2] focus:ring-transparent w-full"
                        id="pesan" placeholder="Pesan yang ingin disampaikan..."></textarea>
                </div>
                <button type="submit"
                    class="mt-5 rounded-xl bg-primary-green hover:bg-primary-green-hover font-medium py-2 px-[18px] text-white h-10">
                    Kirim Pesan
                    <img class="inline ml-[10px]" src="assets/svg/arrow-right.svg" alt="arrow right">
                </button>
            </form>
        </div>
    </div>
</div>

