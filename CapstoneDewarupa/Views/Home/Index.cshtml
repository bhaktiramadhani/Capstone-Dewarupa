<script>
    document.getElementById('emailForm').addEventListener('submit', function (event) {
        event.preventDefault(); // Mencegah pengiriman formulir langsung

        // Ambil nilai dari formulir
        const name = document.getElementById('nama').value;
        const email = document.getElementById('email').value;
        const subject = document.getElementById('subject-pesan').value;
        const message = document.getElementById('pesan').value;

        // Mengonstruksi URL Gmail dengan parameter
        const recipientEmail = 'bakti0048@gmail.com'; // Ganti dengan alamat email penerima
        const gmailUrl = `https://mail.google.com/mail/?view=cm&to=${recipientEmail}&su=${encodeURIComponent(subject)}&body=${encodeURIComponent(`Perkenalkan Saya ${name} \n${message}`)}`;

        // Redirect ke URL Gmail
        window.location.href = gmailUrl;
    });

    let chatbotClicked = false;

    document.getElementById('chatbot').addEventListener('click', function () {
        if (!chatbotClicked) {
            const chatbotcontent = document.getElementById('chatbotcontent');
            const iframe = document.createElement('iframe');
            iframe.src = "https://copilotstudio.microsoft.com/environments/Default-d7b95ec4-9a7f-4260-b2e3-eb53f0ac8401/bots/crdf2_copilotDewarupa/webchat?__version__=2";
            iframe.width = "100%";
            iframe.height = "600px";
            iframe.style.border = "none";
            chatbotcontent.appendChild(iframe);
            chatbotClicked = true;
        }
    });
</script>
