        <h2 class="font-bold text-[40px] text-center">Cari apa yang pengen kamu Pelajari</h2>
        @* searching *@
        <div class="flex self-center rounded-[22px] border-[1.5px] border-primary-green p-3 w-[500px] mt-7 mb-12">
            <label for="search" class="rounded-full bg-primary-green p-3 w-[43.76px] h-[42px]">
                <img src="assets/svg/search.svg" alt="pencarian">
            </label>
            <form class="w-full flex-grow flex" method="get" asp-controller="Belajar" asp-action="Index">
                <input
                    class="border-none outline-none focus:border-none focus:outline-none focus:ring-transparent placeholder:font-semibold placeholder:text-[#777777] placeholder:opacity-50 flex-grow"
