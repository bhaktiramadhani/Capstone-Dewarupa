@using System.Globalization
@model CapstoneDewarupa.Models.Course
@{
    ViewData["Title"] = "Detail " + @Model.Slug;

    // Tanggal dalam format "dd/MM/yyyy HH:mm:ss"
    string inputDate = @Model.CreateDate.ToString();

    // Parse tanggal dari string input
    DateTime date = DateTime.ParseExact(inputDate, "dd/MM/yyyy HH:mm:ss", null);

    // Mengonversi ke format yang diinginkan
    string Date = date.ToString("dddd, dd MMMM yyyy", new CultureInfo("id-ID"));

}
